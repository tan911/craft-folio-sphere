{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": "./",
        "paths": {
            "@/styles/*": ["app/styles/*"],
            "@/components/*": ["app/components/*"],
            "@/lib/*": ["app/lib/*"],
            "@/auth": ["auth.ts"],
        },
        "plugins": [
            {
                "name": "next",
            },
        ],
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "postcss.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
    ],
    "exclude": ["node_modules"],
}
