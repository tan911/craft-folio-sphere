{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "strictNullChecks": true,
        "baseUrl": "./app",
        "paths": {
            "@/styles/*": ["styles/*"],
            "@/components/*": ["components/*"],
            "@/lib/*": ["lib/*"],
        },
        "plugins": [
            {
                "name": "next",
            },
        ],
    },
    "include": [
        "next-env.d.ts",
        "next.config.js",
        "postcss.config.js",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
    ],
    "exclude": ["node_modules"],
}
